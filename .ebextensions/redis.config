01_set_overcommit_memory:
    command: "sysctl vm.overcommit_memory=1"

files:
  "/etc/sysctl.d/99-redis.conf":
    mode: "644"
    owner: root
    group: root
    content: |
      vm.overcommit_memory = 1

container_commands:
  01_start_redis:
    command: "/redis-7.2.5/src/redis-server /redis-7.2.5/redis.conf"
    leader_only: false